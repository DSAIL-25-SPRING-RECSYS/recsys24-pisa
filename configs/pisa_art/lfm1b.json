{
  "dataset": {
    "name": "lfm1b",
    "path": "exp/data",
    "files": {
      "interactions": "LFM-1b_LEs.txt",
      "streams": "user_sessions",
      "track_embeddings": "normalized_pretrained_user_track_embeddings",
      "artist_embeddings": "normalized_pretrained_arttrack_embeddings"
    },
    "sep": "\t",
    "col_names": ["user_id", "art_id", "track_id", "ts", "session_id"],
    "ndays_min": 365,
    "ndays_recent": 365,
    "min_user_nstreams": 1000,
    "min_item_nstreams": 1500,
    "min_sessions": 50,
    "samples_step": 5,
    "train_val_test_split": "-1:5:10",
    "random_state": 101,
    "recent_history": -1
  },
  "training": {
    "learning_rate": 1e-3,
    "min_lr": 1e-8,
    "optimizer": "Adam",
    "batch_size": 512,
    "embedding_dim": 128,
    "normalize_embedding": true,
    "train_max_steps": 150000,
    "save_checkpoints_steps": 1000,
    "save_summary_steps": 100,
    "num_epochs": 100,
    "epoch_tolerate": 5,
    "max_to_keep": 1,
    "n_valid_users": 1000,
    "model_dir": "exp/model",
    "model": {
      "name": "pisa_art",
      "params": {
        "input_scale": true,
        "seqlen": 20,
        "dropout_rate": 0,
        "use_reg": true,
        "l2_emb": 1e-5,
        "pretrained": "item",
        "n_negatives": 1,
        "negsam_strategy": 1,
        "sab": {
          "causality": true,
          "num_blocks": 2,
          "num_heads": 2
        },
        "actr": {
          "bll": {
            "type": "ts"
          },
          "spread": {
            "activate": true,
            "hop": 1,
            "n_last_sess": 0
          },
          "pm": {
            "activate": true,
            "emb": "learn"
          },
          "flatten_actr": 0.5,
          "flatten_actr_art": 0.5
        },
        "neg_alpha": 0.5,
        "num_favs": 10,
        "num_favs_art": 10,
        "lbda_ls": 0.5,
        "lbda_ls_art": 0.5,
        "lbda_task": 0.9,
        "lbda_pos": 0.9,
        "lbda_task_art": 0.9,
        "lbda_pos_art": 0.9,
        "lbda_cross": 0,
        "lbda_narts": 0.5,
        "lbda_art_loss": 0.01
      }
    }
  },
  "cache": {
    "path": "cache",
    "train_interactions": "train_interactions",
    "valid_interactions": "valid_interactions",
    "test_interactions": "test_interactions"
  },
  "logs": {
    "log_dir": "exp/logs",
    "log_freq": 1000
  },
  "eval": {
    "n_users": 3000,
    "batch_size": 100,
    "random_seeds": [1013, 2791, 4357, 6199],
    "need_item_embeddings": false,
    "level": "track",
    "metrics": {
      "primary": "ndcg",
      "acc": [
        {"name": "ndcg", "params": {"k": [10]}},
        {"name": "recall", "params": {"k": [10]}},
        {"name": "repr", "params": {"k": [10]}},
        {"name": "ndcg_rep", "params": {"k": [10]}},
        {"name": "ndcg_exp", "params": {"k": [10]}},
        {"name": "recall_rep", "params": {"k": [10]}},
        {"name": "recall_exp", "params": {"k": [10]}}
      ],
      "non_acc": [
        {"name": "pop", "params": {"k": [10]}}
      ]
    }
  }
}
